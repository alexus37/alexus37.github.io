							<li class="page_item page-item-7 current_page_item"><a href="contact.html">Contact</a></li>
						</ul>
					</li>
				</ul>
			</div>
			<div id="rcontent">
				 <h1 id="heading">Contact</h1>
				<h2>Thank you for the message, I will contact you soon!</h2>
			</div>
		</div>
	</div>
</body>
</html>
 
<?php
}
die();
?>
